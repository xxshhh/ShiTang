<?xml version="1.0" encoding="utf-8"?>
<!-- 商店条目 -->
<android.support.v7.widget.CardView
    android:id="@+id/card_shop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 图片 -->
        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_shop"
            android:padding="5dp">

            <!-- 店名 -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="这里是店名"
                android:textColor="@color/primary_text"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="15dp">
                <!-- 分类 -->
                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="六食堂"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"/>
                <!-- 分隔线 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="丨"
                    android:textColor="@color/third_text"
                    android:textSize="14sp"/>
                <!-- 配送时间 -->
                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="约20分钟"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:layout_marginTop="5dp">
                <!-- 评分条 -->
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/ratingBar"
                    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hedgehog:clickable="false"
                    hedgehog:starCount="5"
                    hedgehog:starEmpty="@mipmap/ic_star_empty"
                    hedgehog:starFill="@mipmap/ic_star_fill"
                    hedgehog:starHalf="@mipmap/ic_star_empty"
                    hedgehog:starImageSize="20dp"/>
                <!-- 销售情况 -->
                <TextView
                    android:id="@+id/tv_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:singleLine="true"
                    android:text="月售1999单"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>